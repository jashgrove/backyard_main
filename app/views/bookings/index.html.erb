<h1>Here are your bookings</h1>


<% if current_user.bookings.any? %>
  <% current_user.bookings.each do |booking| %>
  <br>
    <h2><%= booking.listing.name %> (<%= booking.status %>)</h2>

    <h3>Total Price: $<%= (booking.end_date - booking.start_date) / 3600  * booking.listing.price_per_hour %></h3>
    <ul>
      <li><%= booking.start_date %></li>
      <li><%= booking.end_date %></li>
    </ul>
  <% end %>
<% end %>
