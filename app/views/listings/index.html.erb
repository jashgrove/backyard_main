<h1>Listings</h1>
  <ul>
    <% @listings.each do |listing| %>
      <li>
        <strong><%= listing.name %></strong> - $<%= listing.price_per_hour %><br>
        <p><%= listing.description %></p>
      </li>
    <% end %>
  </ul>

<div data-controller="toggle" class="mt-5">
  <button class="btn btn-outline-primary">Add a New Listing</button>
  <%= render "form", listing: @listing%>
