<div class="card" style="width: 18rem;">
  <% if listing.photo.attached? %>
    <%= cl_image_tag listing.photo.key, class: "card-img-top listing-image"%>
  <% else %>
    <%= image_tag 'https://leisurepoolscanada.ca/wp-content/uploads/2020/06/best-type-of-swimming-pool-for-my-home_2.jpg', class: "card-img-top", style: "object-fit: cover; height: 200px; width: 100%;" %>
  <% end %>

  <div class="card-body">
    <h5 class="card-title"><%= listing.name %></h5>
    <p class="card-text">$<%= listing.price_per_hour %></p>
    <%= link_to "View Listing", listing_path(listing), class: "btn btn-primary" %>
  </div>
</div>
