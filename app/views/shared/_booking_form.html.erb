<%= simple_form_for [listing, booking], url: listing_bookings_path(listing, booking) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :start_date,
        as: :string,
        input_html: { data: { controller: "datepicker" }, class: "", required: true } %>
  <%= f.input :end_date,
        as: :string,
        input_html: { data: { controller: "datepicker" }, class: "", required: true } %>
  <%= f.button :submit, "Book Now", class: 'btn btn-outline-primary' %>
    <h3>            Price is $<%= listing.price_per_hour  %>/hour</h3>
<% end %>







